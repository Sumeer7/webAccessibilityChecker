{
  "name": "web-accessibility-checker",
  "version": "1.0.0",
  "description": "A professional CLI tool for running comprehensive web accessibility audits using axe-core",
  "main": "dist/index.js",
  "bin": {
    "web-accessibility-checker": "dist/cli.js",
    "a11y-check": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "echo \"Tests coming soon\" && exit 0",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "axe",
    "audit",
    "testing",
    "cli",
    "web",
    "playwright"
  ],
  "author": "Open Source Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sumeer7/webAccessibilityChecker.git"
  },
  "bugs": {
    "url": "https://github.com/Sumeer7/webAccessibilityChecker/issues"
  },
  "homepage": "https://github.com/Sumeer7/webAccessibilityChecker#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "playwright": "^1.54.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  }
}

